<Window x:Class="Proyecto_Isasi_Montanaro.Views.Formularios.Informe_form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views.Formularios"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Informes" 
        Height="400" Width="500">

    <!-- Borde redondeado -->
    <Border CornerRadius="8"
        Background="White"
        BorderBrush="#E5E7EB"
        BorderThickness="1">

        <Grid Margin="20,10,20,20">
            <Grid.RowDefinitions>
                <!-- Título -->
                <RowDefinition Height="Auto"/>
                <!-- Borde -->
                <RowDefinition Height="Auto"/>
                <!-- Formulario -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>

            <!-- Título -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10" Style="{StaticResource HeaderWithIcon}">
                <Image Source="/Assets/otros/mage--edit.png" Style="{StaticResource FormHeaderIcon}"/>
                <TextBlock Text="Datos del Informe" Style="{StaticResource FormHeaderTitle}"/>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Margin="0,0,0,0"/>

            <!-- Formulario -->
            <Grid Grid.Row="2" Margin="20,20,20,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nombre -->
                <TextBlock Text="Seleccione el area de informe" 
                   Style="{StaticResource FormLabel}"
                   Grid.Row="0" Grid.Column="0" />
                <ComboBox x:Name="cmbAreaInforme"
                          Style="{StaticResource FormComboBox}"
                          Margin="0,30,0,5"
                          Grid.Row="0" Grid.Column="0"
                          SelectedIndex="0">
                    <ComboBoxItem>Ventas</ComboBoxItem>
                    <ComboBoxItem>Clientes</ComboBoxItem>
                    <ComboBoxItem>Envios</ComboBoxItem>
                    <ComboBoxItem>Inventario</ComboBoxItem>
                </ComboBox>

                <!-- Dni -->
                <TextBlock Text="Seleccione el tipo de informe" 
                   Style="{StaticResource FormLabel}"
                   Grid.Row="1" Grid.Column="2" />
                <ComboBox x:Name="cmbTipoInforme"
                      Style="{StaticResource FormComboBox}"
                      Margin="0,30,0,5"
                      Grid.Row="1" Grid.Column="0"
                      SelectedIndex="0">
                    <ComboBoxItem>Productos mas vendidos</ComboBoxItem>
                    <ComboBoxItem>Usiarios del sistema</ComboBoxItem>
                    <ComboBoxItem>Clientes</ComboBoxItem>
                    <ComboBoxItem>Envios pendientes</ComboBoxItem>
                </ComboBox>

            </Grid>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" 
                Grid.Row="3" 
                HorizontalAlignment="Center">

                <!-- Cancelar -->
                <Button Style="{StaticResource BtnSecondary}" 
                Content="Cancelar" Width="100"
                Margin="0,0,20,0"
                Foreground="White"
                Background="#757575"
                Click="Cancelar_Click"/>

                <!-- Guardar -->
                <Button Style="{StaticResource BtnPrimary}" 
                Content="Generar" Width="100"
                Background="#53BA83"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
