<Window x:Class="Proyecto_Isasi_Montanaro.Views.Formularios.Venta_form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views.Formularios"
        xmlns:vm="clr-namespace:Proyecto_Isasi_Montanaro.ViewModels"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Producto" 
        Height="Auto" Width="530">

    <Window.DataContext>
        <vm:VentasViewModel/>
    </Window.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <!-- Borde redondeado -->
    <Border CornerRadius="8"
        Background="White"
        BorderBrush="#E5E7EB"
        BorderThickness="1">

        <Grid Margin="20,10,20,20">
            <Grid.RowDefinitions>
                <!-- Título -->
                <RowDefinition Height="Auto"/>
                <!-- Separador -->
                <RowDefinition Height="Auto"/>
                <!-- Formulario -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>

            <!-- Título -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10" Style="{StaticResource HeaderWithIcon}">
                <Image Source="/Assets/otros/mage--edit.png" Style="{StaticResource FormHeaderIcon}"/>
                <TextBlock Text="Informacion de la Venta" Style="{StaticResource FormHeaderTitle}"/>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Margin="0,0,0,0"/>

            <!-- Formulario -->
            <Grid Grid.Row="2" Margin="20,20,20,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- venta 0 -->
                    <RowDefinition Height="Auto"/> <!--separador 1-->
                    <RowDefinition Height="Auto"/> <!-- producto 2 -->
                    <RowDefinition Height="Auto"/> <!-- pago 3 -->
                    <RowDefinition Height="Auto"/> <!-- cliente 4 -->
                    <RowDefinition Height="Auto"/> <!-- envio 5 -->
                </Grid.RowDefinitions>

             <!-- VENTA -->
                    <!-- ID Venta -->
                    <TextBlock Text="Nro Venta" 
                               Style="{StaticResource FormLabel}"
                               Grid.Row="0" Grid.Column="0" />
                    <TextBox Style="{StaticResource FormTextBox}" 
                             IsReadOnly="True"
                             Margin="0,30,0,10"
                             Grid.Row="0" Grid.Column="0"
                             Background="#E0E0E0"
                             Text="{Binding ProximoIdVenta}" />

                    <!-- Estado de la venta -->
                    <TextBlock Text="Estado de la venta"
                               Style="{StaticResource FormLabel}"
                               Grid.Row="0" Grid.Column="3"/>

                    <TextBox Style="{StaticResource FormTextBox}" 
                             IsReadOnly="True"
                             Margin="0,30,0,10"
                             Grid.Row="0" Grid.Column="3"
                             Background="#E0E0E0"
                             Text="{Binding EstadoVentaSeleccionado.NombreEstado}" />


                    <!-- PRODUCTOS -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                        <TextBlock Text="1. Productos"
                                   Style="{StaticResource FormLabel}"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <Separator Background="#E5E7EB" Height="1" Margin="0,0,0,10" />

                        <!-- Selector y controles -->
                        <Grid>
                            <!-- Definimos dos filas: una para el selector, otra para el stock -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Fila 0: ComboBox, cantidad y botón -->
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="0"
                                        Margin="0,0,0,5">
                                <!-- ComboBox de productos -->
                                <ComboBox Width="250"
                                          Margin="0,0,8,0"
                                          ItemsSource="{Binding DetalleVM.ProductosFiltrados}"
                                          DisplayMemberPath="Nombre"
                                          IsEditable="True"
                                          IsTextSearchEnabled="False"
                                          SelectedItem="{Binding DetalleVM.ProductoSeleccionado, Mode=TwoWay}"
                                          Text="{Binding DetalleVM.TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                                          IsEnabled="{Binding DetalleVM.ModoSoloLectura, Converter={StaticResource InverseBoolConverter}}"/>

                                <!-- Campo cantidad -->
                                <TextBox Width="80"
                                         Margin="0,0,0,0"
                                         Style="{StaticResource FormTextBox}"
                                         Text="{Binding DetalleVM.CantidadSeleccionada, UpdateSourceTrigger=PropertyChanged}" 
                                         IsReadOnly="{Binding DetalleVM.ModoSoloLectura}"/>

                                <!-- Botón agregar -->
                                <Button Content="Añadir"
                                        Style="{StaticResource BtnSecondary}"
                                        Command="{Binding DetalleVM.AgregarProductoCommand}" 
                                        IsEnabled="{Binding DetalleVM.ModoSoloLectura, Converter={StaticResource InverseBoolConverter}}"/>
                            </StackPanel>

                            <!-- Fila 1: stock debajo del ComboBox -->
                            <TextBlock Text="{Binding DetalleVM.ProductoSeleccionado.Cantidad, StringFormat='Stock disponible: {0}'}"
                                       Foreground="#E35802"
                                       FontWeight="Normal"
                                       FontSize="12"
                                       Margin="5,0,0,10"
                                       Grid.Row="1"
                                       Visibility="{Binding DetalleVM.ProductoSeleccionado, Converter={StaticResource NullToVisibilityConverter}}"/>
                        </Grid>

                        <!-- Lista de productos agregados -->
                        <DataGrid ItemsSource="{Binding DetalleVM.DetalleProductos}"
                              AutoGenerateColumns="False"
                              Margin="0,10,0,20"
                              CanUserAddRows="False"
                              HeadersVisibility="Column">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Producto" Binding="{Binding IdProductoNavigation.Nombre}" Width="*"/>
                                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="100"/>
                                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat={}{0:C}}" Width="120"/>
                                <!-- Columna de Acciones -->
                                <DataGridTemplateColumn Header="Acciones" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <!-- Botón Editar -->
                                                <Button Style="{StaticResource BtnSecondary}"
                                                        Height="15"
                                                        MinWidth="15"
                                                        Margin="2,2,4,2"
                                                        IsEnabled="{Binding DetalleVM.ModoSoloLectura, Converter={StaticResource InverseBoolConverter}}"
                                                        Command="{Binding DataContext.DetalleVM.EditarProductoCommand,
                                                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}">
                                                    <iconPacks:PackIconMaterial Kind="Pencil" 
                                                                                Width="16" Height="16" 
                                                                                Foreground="#F5A623"/>
                                                </Button>

                                                <!-- Botón Eliminar -->
                                                <Button Style="{StaticResource BtnSecondary}"
                                                        Height="15"
                                                        MinWidth="15"
                                                        Margin="2,2,4,2"
                                                        IsEnabled="{Binding DetalleVM.ModoSoloLectura, Converter={StaticResource InverseBoolConverter}}"
                                                        Command="{Binding DataContext.DetalleVM.EliminarProductoCommand,
                                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}">
                                                    <iconPacks:PackIconMaterial Kind="DeleteEmpty"
                                                                                Width="16" Height="16"
                                                                                Foreground="#D64545"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Total -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Total: " FontWeight="Bold" FontSize="14" />
                            <TextBlock Text="{Binding DetalleVM.Total, StringFormat={}{0:C}}" FontWeight="Bold" FontSize="14" Margin="5,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                
                
             <!-- PAGO  -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
                        <TextBlock Text="2. Forma de pago" 
                           Style="{StaticResource FormLabel}"
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                        <Separator Background="#E5E7EB" Height="1" Margin="0,0,0,10"/>
                        <!-- Contenedor principal -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Forma de pago y cuotas -->
                                <RowDefinition Height="Auto"/>
                                <!-- Totales -->
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- FILA 0: Método y cuotas -->
                            <TextBlock Text="Método de pago" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Row="0" Grid.Column="0"/>
                            <ComboBox Style="{StaticResource FormComboBox}"
                                      ItemsSource="{Binding FormaPagoVM.FormasPago}"
                                      DisplayMemberPath="Nombre"
                                      IsEnabled="{Binding FormaPagoVM.ModoSoloLectura, Converter={StaticResource InverseBoolConverter}}"
                                      SelectedItem="{Binding FormaPagoVM.FormaPagoSeleccionada, Mode=TwoWay}"
                                      Margin="0,30,0,10"
                                      Grid.Row="0" Grid.Column="0"
                                      Width="180"/>

                            <TextBlock Text="Cuotas" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Row="0" Grid.Column="2"
                                       Visibility="{Binding FormaPagoVM.FormaPagoSeleccionada.Nombre, Converter={StaticResource CreditoToVisibilityConverter}}"/>
                            <ComboBox Style="{StaticResource FormComboBox}"
                                      ItemsSource="{Binding FormaPagoVM.CuotasDisponibles}"
                                      SelectedItem="{Binding FormaPagoVM.CuotaSeleccionada, Mode=TwoWay}"
                                      Margin="0,30,0,10"
                                      Grid.Row="0" Grid.Column="2"
                                      Width="120"
                                      IsEnabled="{Binding EsCredito}" 
                                      Visibility="{Binding FormaPagoVM.FormaPagoSeleccionada.Nombre, Converter={StaticResource CreditoToVisibilityConverter}}"/>

                            <!-- FILA 1: Totales -->
                            <StackPanel Grid.Row="1" Grid.Column="2"  Margin="0,4,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,2">
                                    <TextBlock Text="Subtotal:" Width="140"/>
                                    <TextBlock Text="{Binding Subtotal, StringFormat={}{0:C}}" />
                                </StackPanel>

                                <!-- Recargo credito -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,2"
                                            Visibility="{Binding EsCredito, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Recargo (10% crédito):" Width="140"/>
                                    <TextBlock Text="{Binding Recargo, StringFormat={}{0:C}}" />
                                </StackPanel>

                                <!-- Envío -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,2"
                                            Visibility="{Binding EnvioVM.EnvioHabilitado, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Costo de envío:" Width="140"/>
                                    <TextBlock Text="{Binding EnvioVM.Costo, StringFormat={}{0:C}}"/>
                                </StackPanel>

                                <!-- Total final -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,2">
                                    <TextBlock Text="Total:" Width="140" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding TotalFinal, StringFormat={}{0:C}}" FontWeight="Bold"/>
                                </StackPanel>

                                <!-- Cuota -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,2"
                                            Visibility="{Binding MostrarMontoPorCuota, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Monto por cuota:" Width="140"/>
                                    <TextBlock Text="{Binding MontoPorCuota, StringFormat={}{0:C}}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

             <!-- CLIENTE -->
                 <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
                    <TextBlock Text="3. Datos del cliente" 
                               Style="{StaticResource FormLabel}"
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <Separator Background="#E5E7EB" Height="1" Margin="0,0,0,10"/>

                        <Grid>
                            <!-- Definimos dos filas: una para el selector, otra para el stock -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/> <!-- Dni -->
                                <RowDefinition Height="Auto"/> <!-- Nombre y apellido -->
                                <RowDefinition Height="Auto"/> <!-- Correo y telefono -->
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Nombre -->
                            <TextBlock Text="Nombre" 
                                      Style="{StaticResource FormLabel}"
                                      Grid.Row="1" Grid.Column="0" />
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,30,0,10">
                                <TextBox Style="{StaticResource FormTextBox}" 
                                         IsReadOnly="{Binding ClienteVM.ModoSoloLectura}"
                                         Text="{Binding ClienteVM.Nombre, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{Binding ClienteVM.ErrorNombre}"
                                             Foreground="#E35802"
                                             FontSize="11"
                                             Margin="4,2,0,0"/>
                            </StackPanel>

                            <!-- Apellido -->
                            <TextBlock Text="Apellido" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Row="1" Grid.Column="2" />
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,30,0,10">
                                <TextBox Style="{StaticResource FormTextBox}" 
                                         IsReadOnly="{Binding ClienteVM.ModoSoloLectura}"
                                         Text="{Binding ClienteVM.Apellido, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{Binding ClienteVM.ErrorApellido}"
                                           Foreground="#E35802"
                                           FontSize="11"
                                           Margin="4,2,0,0"/>
                            </StackPanel>

                            <!-- Dni -->
                            <TextBlock Text="DNI" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Row="0" Grid.Column="0" />
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="0" Grid.Column="0"
                                        Margin="0,30,0,10">

                                <!-- Campo de texto para el DNI -->
                                <TextBox Width="140"
                                         Style="{StaticResource FormTextBox}"
                                         IsReadOnly="{Binding ClienteVM.ModoSoloLectura}"
                                         Text="{Binding ClienteVM.DniClienteInput, UpdateSourceTrigger=PropertyChanged}" />

                                <!-- Botón de búsqueda con ícono -->
                                <Button Style="{StaticResource BtnSecondary}"
                                        Height="15"
                                        MinWidth="15"
                                        Margin="10,0,0,4"
                                         IsEnabled="{Binding ClienteVM.ModoSoloLectura, Converter={StaticResource InverseBoolConverter}}"
                                        Command="{Binding ClienteVM.BuscarClienteCommand}">
                                    <iconPacks:PackIconMaterial Kind="Magnify"
                                                                Width="16" Height="16"
                                                                Foreground="#072741"/>
                                </Button>
                            </StackPanel>

                            <!-- Telefono -->
                            <TextBlock Text="Telefono" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Row="2" Grid.Column="2" />
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,30,0,10">
                                <TextBox Style="{StaticResource FormTextBox}" 
                                         IsReadOnly="{Binding ClienteVM.ModoSoloLectura}"
                                         Text="{Binding ClienteVM.Telefono, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{Binding ClienteVM.ErrorTelefono}"
                                           Foreground="#E35802"
                                           FontSize="11"
                                           Margin="4,2,0,0"/>
                            </StackPanel>

                            <!-- Correo -->
                            <TextBlock Text="Correo electronico" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Row="2" Grid.Column="0" />
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,30,0,10">
                                <TextBox Style="{StaticResource FormTextBox}" 
                                         IsReadOnly="{Binding ClienteVM.ModoSoloLectura}"
                                         Text="{Binding ClienteVM.Email, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{Binding ClienteVM.ErrorEmail}"
                                           Foreground="#E35802"
                                           FontSize="11"
                                           Margin="4,2,0,0"/>
                            </StackPanel>
                        </Grid>
                 </StackPanel>

               

             <!-- ENVIO -->
                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
                        <!-- Título + checkbox -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="4. Envío" 
                                       Style="{StaticResource FormLabel}" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <CheckBox Name="CkEnvio"
                                      IsChecked="{Binding EnvioVM.EnvioHabilitado, Mode=TwoWay}"
                                      VerticalAlignment="Center">
                                <CheckBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource AndBooleanConverter}">
                                        <!-- Siempre se puede tildar/desmarcar solo si NO está en modo lectura -->
                                        <Binding Path="EnvioVM.ModoSoloLectura" Converter="{StaticResource InverseBoolConverter}"/>
                                        <!-- En caso de que quieras condicionar con otra lógica adicional, podés agregar más bindings acá -->
                                    </MultiBinding>
                                </CheckBox.IsEnabled>
                            </CheckBox>
                        </StackPanel>

                        <Separator Background="#E5E7EB" Height="1" Margin="0,10,0,10"/>

                        <Grid>
                        <!-- Definimos dos filas: una para el selector, otra para el stock -->
                        <Grid.RowDefinitions>
                            <!-- Direccion 0-->
                            <RowDefinition Height="Auto"/>
                            <!-- Calle y altura 1 -->
                            <RowDefinition Height="Auto"/>
                            <!-- Provincia y ciudad 2 -->
                            <RowDefinition Height="Auto"/>
                            <!-- Servicio y costo 3 -->
                             <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Direccion -->
                        <TextBlock Text="Direccion" 
                                   Style="{StaticResource FormLabel}" 
                                   Grid.Row="0" Grid.Column="0"/>
                            <ComboBox Style="{StaticResource FormComboBox}" 
                                  ItemsSource="{Binding EnvioVM.DireccionesCliente}"
                                  DisplayMemberPath="DireccionCompleta" 
                                  SelectedItem="{Binding EnvioVM.DireccionSeleccionada, Mode=TwoWay}"
                                  Margin="0,30,0,10"
                                  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                <ComboBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource AndBooleanConverter}">
                                        <Binding Path="EnvioVM.EnvioHabilitado"/>
                                        <Binding Path="EnvioVM.ModoSoloLectura" Converter="{StaticResource InverseBoolConverter}"/>
                                    </MultiBinding>
                                </ComboBox.IsEnabled>
                            </ComboBox>
                            <Button Content="+ Nueva dirección"
                                    Style="{StaticResource BtnSecondary}"
                                    Margin="0,30,0,10"
                                    Grid.Row="0" Grid.Column="3"
                                    Command="{Binding EnvioVM.NuevaDireccionCommand}">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource AndBooleanConverter}">
                                        <Binding Path="EnvioVM.EnvioHabilitado"/>
                                        <Binding Path="EnvioVM.ModoSoloLectura" Converter="{StaticResource InverseBoolConverter}"/>
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>


                            <!-- CALLE -->
                            <TextBlock Text="Calle" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Row="1" Grid.Column="0" />

                            <!-- Campo + error, sin mover el label -->
                            <Grid Grid.Row="1" Grid.Column="0" Margin="0,25,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- TextBox -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Error -->
                                </Grid.RowDefinitions>

                                <TextBox Style="{StaticResource FormTextBox}" 
                                         Grid.Row="0"
                                         Margin="0,5,0,0"
                                         Text="{Binding EnvioVM.DireccionEditable.NombreCalle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.IsEnabled>
                                        <MultiBinding Converter="{StaticResource AndBooleanConverter}">
                                            <Binding Path="EnvioVM.NuevaDireccionHabilitada"/>
                                            <Binding Path="EnvioVM.ModoSoloLectura" Converter="{StaticResource InverseBoolConverter}"/>
                                        </MultiBinding>
                                    </TextBox.IsEnabled>
                                </TextBox>

                                <TextBlock Text="{Binding EnvioVM.ErrorCalle}"
                                           Grid.Row="1"
                                           Foreground="Red"
                                           FontSize="11"
                                           Margin="5,2,0,10"/>
                            </Grid>


                            <!-- ALTURA -->
                            <TextBlock Text="Altura" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Row="1" Grid.Column="2" />

                            <Grid Grid.Row="1" Grid.Column="2" Margin="0,25,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBox Style="{StaticResource FormTextBox}" 
                                         Grid.Row="0"
                                         Margin="0,5,0,0"
                                         Text="{Binding EnvioVM.DireccionEditable.Altura, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.IsEnabled>
                                        <MultiBinding Converter="{StaticResource AndBooleanConverter}">
                                            <Binding Path="EnvioVM.NuevaDireccionHabilitada"/>
                                            <Binding Path="EnvioVM.ModoSoloLectura" Converter="{StaticResource InverseBoolConverter}"/>
                                        </MultiBinding>
                                    </TextBox.IsEnabled>
                                </TextBox>

                                <TextBlock Text="{Binding EnvioVM.ErrorAltura}"
                                           Grid.Row="1"
                                           Foreground="Red"
                                           FontSize="11"
                                           Margin="5,2,0,10"/>
                            </Grid>


                            <!-- PROVINCIA -->
                            <TextBlock Text="Provincia"
                                       Style="{StaticResource FormLabel}"
                                       Grid.Row="2" Grid.Column="0" />

                            <Grid Grid.Row="2" Grid.Column="0" Margin="0,25,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>


                                <ComboBox ItemsSource="{Binding EnvioVM.Provincias}"
                                          DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding EnvioVM.ProvinciaSeleccionada, Mode=TwoWay}"
                                          Style="{StaticResource FormComboBox}"
                                          Grid.Row="0"
                                          Margin="0,5,0,0">
                                    <ComboBox.IsEnabled>
                                        <MultiBinding Converter="{StaticResource AndBooleanConverter}">
                                            <Binding Path="EnvioVM.NuevaDireccionHabilitada"/>
                                            <Binding Path="EnvioVM.ModoSoloLectura" Converter="{StaticResource InverseBoolConverter}"/>
                                        </MultiBinding>
                                    </ComboBox.IsEnabled>
                                </ComboBox>

                                <TextBlock Text="{Binding EnvioVM.ErrorProvincia}"
                                           Grid.Row="1"
                                           Foreground="Red"
                                           FontSize="11"
                                           Margin="5,2,0,10"/>
                            </Grid>


                            <!-- CIUDAD -->
                            <TextBlock Text="Ciudad"
                                       Style="{StaticResource FormLabel}"
                                       Grid.Row="2" Grid.Column="2" />

                            <Grid Grid.Row="2" Grid.Column="2" Margin="0,25,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <ComboBox ItemsSource="{Binding EnvioVM.Ciudades}"
                                          DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding EnvioVM.CiudadSeleccionada, Mode=TwoWay}"
                                          Style="{StaticResource FormComboBox}"
                                          Grid.Row="0"
                                          Margin="0,5,0,0">
                                    <ComboBox.IsEnabled>
                                        <MultiBinding Converter="{StaticResource AndBooleanConverter}">
                                            <Binding Path="EnvioVM.NuevaDireccionHabilitada"/>
                                            <Binding Path="EnvioVM.ModoSoloLectura" Converter="{StaticResource InverseBoolConverter}"/>
                                        </MultiBinding>
                                    </ComboBox.IsEnabled>
                                </ComboBox>

                                <TextBlock Text="{Binding EnvioVM.ErrorCiudad}"
                                           Grid.Row="1"
                                           Foreground="Red"
                                           FontSize="11"
                                           Margin="5,2,0,10"/>
                            </Grid>

                            <!-- Servicio -->
                        <TextBlock Text="Servicio" 
                                   Style="{StaticResource FormLabel}"
                                   Grid.Row="3" Grid.Column="0" />
                            <ComboBox Style="{StaticResource FormComboBox}" 
                                      ItemsSource="{Binding TransporteVM.Transportes}" 
                                      DisplayMemberPath="Nombre"
                                      SelectedItem="{Binding TransporteVM.TransporteSeleccionado, Mode=TwoWay}"
                                      Margin="0,30,0,10"
                                      Grid.Row="3" Grid.Column="0">
                                <ComboBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource AndBooleanConverter}">
                                        <Binding Path="EnvioVM.EnvioHabilitado"/>
                                        <Binding Path="EnvioVM.ModoSoloLectura" Converter="{StaticResource InverseBoolConverter}"/>
                                    </MultiBinding>
                                </ComboBox.IsEnabled>
                            </ComboBox>

                            <!-- Costo servicio -->
                        <TextBlock Text="Costo" 
                                   Style="{StaticResource FormLabel}"
                                   Grid.Row="3" Grid.Column="2" />
                            <TextBox Style="{StaticResource FormTextBox}" 
                                     Margin="0,30,0,10"
                                     Grid.Row="3" Grid.Column="2"
                                     Text="{Binding EnvioVM.Costo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue='',FallbackValue=''}"
                                     LostFocus="TxtCosto_LostFocus">
                                <TextBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource AndBooleanConverter}">
                                        <Binding Path="EnvioVM.EnvioHabilitado"/>
                                        <Binding Path="EnvioVM.ModoSoloLectura" Converter="{StaticResource InverseBoolConverter}"/>
                                    </MultiBinding>
                                </TextBox.IsEnabled>
                            </TextBox>
                        </Grid>
                </StackPanel>
                
            </Grid>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" 
                    Grid.Row="5" 
                    HorizontalAlignment="Center" Cursor="">

                <!-- Cancelar -->
                <Button Style="{StaticResource BtnSecondary}" 
                    Content="Cancelar" Width="100"
                    Margin="0,0,10,0"
                    Foreground="White"
                    Background="#757575"
                    Click="Cancelar_Click"/>


                <!-- Guardar -->
                <Button Style="{StaticResource BtnPrimary}" 
                    Content="Guardar" Width="100"
                    Background="#53BA83"
                    Command="{Binding ConfirmarVentaCommand}"
                    Visibility="{Binding ModoSoloLectura, Converter={StaticResource InverseBoolToVisibilityConverter}}" />

                <Button Content="Ver factura"
                    Command="{Binding VerFacturaCommand}"
                    Visibility="{Binding ModoSoloLectura, Converter={StaticResource BoolToVisibilityConverter}}"
                    Style="{StaticResource BtnPrimary}"
                    Background="#072741"
                    Foreground="White"
                    Width="130"
                    Margin="10,0,0,0"/>

            </StackPanel>
        </Grid>
    </Border>
    </ScrollViewer>
</Window>
