<Window x:Class="Proyecto_Isasi_Montanaro.Views.Formularios.Venta_form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views.Formularios"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Producto" 
        Height="Auto" Width="520">

  <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <!-- Borde redondeado -->
    <Border CornerRadius="8"
        Background="White"
        BorderBrush="#E5E7EB"
        BorderThickness="1">

        <Grid Margin="20,10,20,20">
            <Grid.RowDefinitions>
                <!-- Título -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
                <RowDefinition Height="Auto"/>
                <!-- Formulario -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>

            <!-- Título -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10" Style="{StaticResource HeaderWithIcon}">
                <Image Source="/Assets/otros/mage--edit.png" Style="{StaticResource FormHeaderIcon}"/>
                <TextBlock Text="Informacion de la Venta" Style="{StaticResource FormHeaderTitle}"/>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Margin="0,0,0,0"/>

            <!-- Formulario -->
            <Grid Grid.Row="2" Margin="20,20,20,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ID Venta -->
                <TextBlock Text="ID Venta" 
                       Style="{StaticResource FormLabel}"
                       Grid.Row="0" Grid.Column="0" />
                <TextBox Style="{StaticResource FormTextBox}" 
                     IsReadOnly="True"
                     Margin="0,30,0,10"
                     Grid.Row="0" Grid.Column="0"/>

                <!-- Productos -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                        <TextBlock Text="Productos"
                           Style="{StaticResource FormLabel}"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                        <Separator Background="#E5E7EB" Height="1" Margin="0,0,0,10" />

                        <!-- Botón para agregar productos -->
                        <Button Content="+ Agregar producto"
                        Style="{StaticResource BtnSecondary}"
                        Width="150"
                        Margin="0,0,0,10"
                        Click="AgregarProducto_Click"/>

                        <!-- Lista de productos -->
                        <ItemsControl x:Name="ListaProductos" Margin="0,10,0,20">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                                        <TextBox Width="250" Margin="0,0,10,0"
                                         Style="{StaticResource FormTextBox}"
                                         Text="{Binding NombreProducto, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Width="80"
                                         Style="{StaticResource FormTextBox}"
                                         Text="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                 </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
                    <TextBlock Text="Datos del cliente" 
                       Style="{StaticResource FormLabel}"
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
                    <Separator Background="#E5E7EB" Height="1" Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Nombre -->
                <TextBlock Text="Nombre" 
                     Style="{StaticResource FormLabel}"
                     Grid.Row="3" Grid.Column="0" />
                <TextBox Style="{StaticResource FormTextBox}" 
                   Margin="0,30,0,10"
                   Grid.Row="3" Grid.Column="0"/>

                <!-- Apellido -->
                <TextBlock Text="Apellido" 
                     Style="{StaticResource FormLabel}"
                     Grid.Row="3" Grid.Column="2" />
                <TextBox Style="{StaticResource FormTextBox}" 
                   Margin="0,30,0,10"
                   Grid.Row="3" Grid.Column="2"/>

                <!-- Dni -->
                <TextBlock Text="Dni" 
                     Style="{StaticResource FormLabel}"
                     Grid.Row="4" Grid.Column="0" />
                <TextBox Style="{StaticResource FormTextBox}" 
                   Margin="0,30,0,10"
                   Grid.Row="4" Grid.Column="0"/>

                <!-- Telefono -->
                <TextBlock Text="Telefono" 
                     Style="{StaticResource FormLabel}"
                     Grid.Row="4" Grid.Column="2" />
                <TextBox Style="{StaticResource FormTextBox}" 
                   Margin="0,30,0,10"
                   Grid.Row="4" Grid.Column="2"/>

                <!-- Correo -->
                <TextBlock Text="Correo electronico" 
                     Style="{StaticResource FormLabel}"
                     Grid.Row="5" Grid.Column="0" />
                <TextBox Style="{StaticResource FormTextBox}" 
                   Margin="0,30,0,10"
                   Grid.Row="5" Grid.Column="0"/>

                <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
                    <TextBlock Text="Envio" 
                       Style="{StaticResource FormLabel}" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
                    <Separator Background="#E5E7EB" Height="1" Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Direccion -->
                <TextBlock Text="Direccion" 
                   Style="{StaticResource FormLabel}" 
                   Grid.Row="7" Grid.Column="0"/>
                <ComboBox Style="{StaticResource FormComboBox}" 
                  Margin="0,30,0,10"
                  Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3">
                </ComboBox>

                <!-- Calle -->
                <TextBlock Text="Calle" 
                     Style="{StaticResource FormLabel}"
                     Grid.Row="8" Grid.Column="0" />
                <TextBox Style="{StaticResource FormTextBox}" 
                   Margin="0,30,0,10"
                   Grid.Row="8" Grid.Column="0"/>

                <!-- Altura -->
                <TextBlock Text="Altura" 
                     Style="{StaticResource FormLabel}"
                     Grid.Row="8" Grid.Column="2" />
                <TextBox Style="{StaticResource FormTextBox}" 
                   Margin="0,30,0,10"
                   Grid.Row="8" Grid.Column="2"/>

                <!-- Provincia -->
                <TextBlock Text="Provincia" 
                     Style="{StaticResource FormLabel}"
                     Grid.Row="9" Grid.Column="0" />
                <TextBox Style="{StaticResource FormTextBox}" 
                   Margin="0,30,0,10"
                   Grid.Row="9" Grid.Column="0"/>

                <!-- Ciudad -->
                <TextBlock Text="Ciudad" 
                     Style="{StaticResource FormLabel}"
                     Grid.Row="9" Grid.Column="2" />
                <TextBox Style="{StaticResource FormTextBox}" 
                       Margin="0,30,0,10"
                       Grid.Row="9" Grid.Column="2"/>

                <!-- Servicio -->
                <TextBlock Text="Provincia" 
                     Style="{StaticResource FormLabel}"
                     Grid.Row="10" Grid.Column="0" />
                <TextBox Style="{StaticResource FormTextBox}" 
                   Margin="0,30,0,10"
                   Grid.Row="10" Grid.Column="0"/>

                <!-- Costo servicio -->
                <TextBlock Text="Costo" 
                     Style="{StaticResource FormLabel}"
                     Grid.Row="10" Grid.Column="2" />
                <TextBox Style="{StaticResource FormTextBox}" 
                       Margin="0,30,0,10"
                       Grid.Row="10" Grid.Column="2"/>

            </Grid>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" 
                    Grid.Row="11" 
                    HorizontalAlignment="Center">

                <!-- Cancelar -->
                <Button Style="{StaticResource BtnSecondary}" 
                    Content="Cancelar" Width="100"
                    Margin="0,0,10,0"
                    Foreground="White"
                    Background="#757575"
                    Click="Cancelar_Click"/>

                <!-- Modificar -->
                <Button Style="{StaticResource BtnPrimary}" 
                    Content="Modificar" Width="100"
                    Margin="0,0,10,0"
                    Background="#F5A623"
                    />

                <!-- Guardar -->
                <Button Style="{StaticResource BtnPrimary}" 
                    Content="Guardar" Width="100"
                    Background="#53BA83"/>
            </StackPanel>
        </Grid>
    </Border>
    </ScrollViewer>
</Window>
