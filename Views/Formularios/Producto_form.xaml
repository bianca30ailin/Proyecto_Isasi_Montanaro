<Window x:Class="Proyecto_Isasi_Montanaro.Views.Formularios.Producto_form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views.Formularios"
        xmlns:vm="clr-namespace:Proyecto_Isasi_Montanaro.ViewModels"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Producto" 
        Height="560" Width="520">

    <Window.DataContext>
        <vm:ProductoFormViewModel/>
    </Window.DataContext>

    <!-- Borde redondeado -->
    <Border CornerRadius="8"
            Background="White"
            BorderBrush="#E5E7EB"
            BorderThickness="1">

        <Grid Margin="20,10,20,20">
            <Grid.RowDefinitions>
                <!-- Título -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
                <RowDefinition Height="Auto"/>
                <!-- Formulario -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
                <RowDefinition Height="Auto"/>
            
            </Grid.RowDefinitions>

            <!-- Título -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10" Style="{StaticResource HeaderWithIcon}">
                <Image Source="/Assets/otros/mage--edit.png" Style="{StaticResource FormHeaderIcon}"/>
                <TextBlock Text="Informacion del Producto" Style="{StaticResource FormHeaderTitle}"/>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Margin="0,0,0,0"/>
        
            <!-- Formulario -->
            <Grid Grid.Row="2" Margin="20,20,20,40">
                <Grid.ColumnDefinitions> 
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ID Producto -->
                <TextBlock Text="ID Producto" 
                           Style="{StaticResource FormLabel}"
                           Grid.Row="0" Grid.Column="0" />
                <TextBox Style="{StaticResource FormTextBox}"
                         Text="{Binding IdSimulado}"
                         IsReadOnly="True"
                         Margin="0,30,0,10"
                         Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

                <!-- Nombre -->
                <TextBlock Text="Nombre" 
                           Style="{StaticResource FormLabel}" 
                           Grid.Row="1" Grid.Column="0"/>
                <TextBox Style="{StaticResource FormTextBox}" 
                         Margin="0,30,0,10"
                         Text="{Binding NuevoProducto.Nombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="{Binding IsEditable, Converter={StaticResource InverseBoolConverter}}"
                         Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"/>

                <!-- Descripción -->
                <TextBlock Text="Descripción" 
                           Style="{StaticResource FormLabel}" 
                           Grid.Row="2" Grid.Column="0"/>
                <TextBox Style="{StaticResource FormTextBox}" 
                         Height="60" 
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Margin="0,30,0,10"
                         Text="{Binding NuevoProducto.Descripcion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="{Binding IsEditable, Converter={StaticResource InverseBoolConverter}}"
                         Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"/>

                <!-- Categoría -->
                <TextBlock Text="Categoría" 
                      Style="{StaticResource FormLabel}" 
                      Grid.Row="3" Grid.Column="0"/>

                   <ComboBox Style="{StaticResource FormComboBox}" 
                      Margin="0,30,0,10"
                      Grid.Row="3" Grid.Column="0"
                      IsEnabled="{Binding IsEditable}"
                      ItemsSource="{Binding Categorias}"
                      DisplayMemberPath="Nombre"
                      SelectedItem="{Binding CategoriaSeleccionada, Mode=TwoWay}" />

                <!-- Precio unitario -->
                <TextBlock Text="Precio unitario" 
                   Style="{StaticResource FormLabel}"
                   Grid.Row="3" Grid.Column="2"/>
                <TextBox Style="{StaticResource FormTextBox}" 
                     Margin="0,30,0,10"
                     Text="{Binding NuevoProducto.Precio, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="{Binding IsEditable, Converter={StaticResource InverseBoolConverter}}"
                     Grid.Row="3" Grid.Column="2"/>

                <!-- Stock -->
                <TextBlock Text="Stock" 
                           Style="{StaticResource FormLabel}" 
                           Grid.Row="4" Grid.Column="0"/>
                <TextBox Style="{StaticResource FormTextBox}" 
                         IsReadOnly="{Binding IsEditable, Converter={StaticResource InverseBoolConverter}}"
                         Margin="0,30,0,10"
                         Text="{Binding NuevoProducto.Cantidad, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Row="4" Grid.Column="0"/>

                <!-- Stock Minimo -->
                <TextBlock Text="Stock minimo" 
                           Style="{StaticResource FormLabel}" 
                           Grid.Row="4" Grid.Column="2"/>
                <TextBox Style="{StaticResource FormTextBox}" 
                         IsReadOnly="{Binding IsEditable, Converter={StaticResource InverseBoolConverter}}"
                         Margin="0,30,0,10"
                         Text="{Binding NuevoProducto.StockMinimo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Row="4" Grid.Column="2"/>
            </Grid>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" 
                        Grid.Row="3" 
                        HorizontalAlignment="Center">

                <!-- Cancelar -->
                <Button Style="{StaticResource BtnSecondary}" 
                        Content="Cancelar" Width="100"
                        Margin="0,0,10,0"
                        Foreground="White"
                        Background="#757575"
                        Command="{Binding CancelarCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />

                <!-- Modificar -->
                <Button Style="{StaticResource BtnPrimary}" 
                        Content="Modificar" Width="100"
                        Margin="0,0,10,0"
                        Background="#F5A623"
                        Visibility="{Binding EsNuevo, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                        Command="{Binding ModificarCommand}"/>

                <!-- Guardar -->
                <Button Style="{StaticResource BtnPrimary}" 
                        Content="Guardar" Width="100"
                        Background="#53BA83"
                        Command="{Binding GuardarCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Cursor=""/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
