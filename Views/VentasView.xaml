<UserControl x:Class="Proyecto_Isasi_Montanaro.Views.VentasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views"
             xmlns:vm="clr-namespace:Proyecto_Isasi_Montanaro.ViewModels"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F3EDF7">

    <UserControl.DataContext>
        <vm:VentasViewModel/>
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- Encabezado -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
            <RowDefinition  Height="Auto"/>
            <!-- Filtrado -->
            <RowDefinition Height="Auto"/>
            <!-- Titulo tabla-->
            <RowDefinition Height="Auto"/>
            <!-- Tabla -->
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- FILA 0: TÍTULO -->
        <StackPanel Grid.Row="0" Style="{StaticResource HeaderWithIcon}">
            <Image Source="/Assets/venta/icon-venta.png" Style="{StaticResource HeaderIcon}"/>
            <TextBlock Text="Gestión de Ventas" Style="{StaticResource HeaderTitle}"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,10" Cursor="">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Chips a la izquierda -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Activas" Style="{StaticResource ChipActivos}" Margin="0,0,10,0"
                        Command="{Binding FiltrarPorEstadoCommand}"
                        CommandParameter="Activa"
                        />
                <Button Content="Canceladas" Style="{StaticResource ChipInactivos}" Margin="0,0,10,0"
                        Command="{Binding FiltrarPorEstadoCommand}"
                        CommandParameter="Cancelada"/>
                <Button Content="Pago pendiente" Style="{StaticResource ChipPendientePago}" Margin="0,0,10,0"
                        Command="{Binding FiltrarPorEstadoCommand}"
                        CommandParameter="Pendiente de pago"/>
                <Button Content="Completadas" Style="{StaticResource ChipCompletada}" 
                        Command="{Binding FiltrarPorEstadoCommand}"
                        CommandParameter="Completada"/>
            </StackPanel>

            <!-- Botón a la derecha -->
            <Button Content="Nueva Venta"
                Style="{StaticResource BtnPrimary}"
                Grid.Column="1"
                Click="NuevaVenta_Click"
                HorizontalAlignment="Right"/>
        </Grid>


        <!-- FILA 2: FILTROS -->
        <Border Grid.Row="2" Style="{StaticResource FilterPanel}">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Categoría más ancha -->
                    <ColumnDefinition Width="*"/>
                    <!-- Fecha 1 -->
                    <ColumnDefinition Width="*"/>
                    <!-- Fecha 2 -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Botón Filtrar -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Botón Limpiar -->
                </Grid.ColumnDefinitions>

                <!-- ComboBox ordenar -->
                <ComboBox Grid.Column="0"
                          Style="{StaticResource FormCombo}"
                          Margin="0,0,10,0"
                          ItemsSource="{Binding CriteriosOrden}"
                          SelectedItem="{Binding CriterioOrdenSeleccionado, Mode=TwoWay}"
                          SelectedIndex="0"
                          ToolTip="Ordenar ventas por..."/>

                <!-- DatePickers -->
                <DatePicker Grid.Column="1"
                            Style="{StaticResource FormDate}"
                            Margin="0,0,10,0"
                            SelectedDate="{Binding FechaDesde, Mode=TwoWay}"
                            ToolTip="Desde esta fecha"/>

                <DatePicker Grid.Column="2"
                            Style="{StaticResource FormDate}"
                            Margin="0,0,16,0"
                            SelectedDate="{Binding FechaHasta, Mode=TwoWay}"
                            ToolTip="Hasta esta fecha"/>

                <!-- Botones -->
                <Button Grid.Column="3" 
                    Content="Filtrar" 
                    Style="{StaticResource BtnPrimary}" 
                    Margin="0,0,8,0"
                    Command="{Binding AplicarFiltrosCommand}"
                    MinWidth="100"/> 

                <Button Grid.Column="4"
                    Content="Limpiar"
                    Style="{StaticResource BtnSecondary}"
                    Margin="0,0,0,0"
                    MinWidth="100"
                    Command="{Binding LimpiarFiltrosCommand}"/>
            </Grid>
        </Border>

        <!-- FILA 3: Encabezado de tabla -->
        <Border Grid.Row="3"
            Background="White"
            Margin="0,10,0,4" 
            BorderBrush="#E5E7EB"
            BorderThickness="0,0,0,1">
            <!-- línea sutil abajo -->
            <Grid Style="{StaticResource TableHeaderBar}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Título -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                    <Image Source="/Assets/otros/material-symbols--list-rounded.png" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Listado de Ventas" Style="{StaticResource TableHeaderTitle}"/>
                </StackPanel>

                <!-- Buscador -->
                <TextBox x:Name="BuscarTextBox"
         Grid.ColumnSpan="2"
         Margin="540,0,0,0"
         Style="{StaticResource SearchBox}"
         Tag="Buscar producto o categoría..."
         Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
         ToolTip="Buscar venta, cliente o vendedor..."/>
            </Grid>
        </Border>

        <!-- FILA 4: TABLA -->
        <DataGrid Grid.Row="4" Style="{StaticResource AppDataGrid}" Margin="0,2,0,0"
          ItemsSource="{Binding Ventas}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nro venta"    Binding="{Binding IdNroVenta}" Width="Auto"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding FechaHora}" Width="Auto"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="*"/>
                <DataGridTextColumn Header="Cliente"     Binding="{Binding DniClienteNavigation.NombreCompleto}" Width="Auto"/>
                <DataGridTextColumn Header="Envio"    Binding="{Binding Envio}" Width="Auto"/>
                <DataGridTextColumn Header="Estado"    Binding="{Binding EstadoVenta.NombreEstado}" Width="*"/>
                <DataGridTextColumn Header="Creado por" Binding="{Binding IdUsuarioNavigation.Nombre}" Width="*"/>
                <DataGridTemplateColumn Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource BtnSecondary}" Height="15" MinWidth="15" Margin="2,2,4,2"
                                         Command="{Binding DataContext.VerVentaSoloLecturaCommand, 
                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}">
                                    <iconPacks:PackIconMaterial Kind="Eye" Width="16" Height="16" Foreground="#F5A623"/>
                                </Button>
                                <!-- Eliminar -->
                                <Button Style="{StaticResource BtnSecondary}"
                                        Height="15" MinWidth="15" Margin="4,2,2,2"
                                        Command="{Binding DataContext.CancelarVentaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}">
                                    <iconPacks:PackIconMaterial Kind="DeleteEmpty" Width="16" Height="16" Foreground="#D64545"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
