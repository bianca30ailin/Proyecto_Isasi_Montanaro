<UserControl x:Class="Proyecto_Isasi_Montanaro.Views.Informes.InformeUsuariosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views.Informes"
              xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F3EDF7">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Encabezado -->
            <RowDefinition Height="Auto"/>
            <!-- Filtros o Resumen -->
            <RowDefinition Height="*"/>
            <!-- Contenido principal -->
        </Grid.RowDefinitions>

        <!-- FILA 0: ENCABEZADO -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Botón Volver -->
            <Button Command="{Binding VolverCommand}"
                    Background="Transparent"
                    Foreground="#072741"
                    BorderThickness="0"
                    FontWeight="Bold"
                    FontSize="14"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    Padding="0"
                    Margin="0,0,15,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="ArrowLeft"
                                        Width="18" Height="18"
                                        VerticalAlignment="Center"
                                        Margin="0,0,5,0"/>
                </StackPanel>
            </Button>

            <!-- Título con ícono -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <iconPacks:PackIconMaterial Kind="AccountCogOutline"
                                    Width="20" Height="20"
                                    Foreground="#E35802"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"/>
                <TextBlock Text="Informe de Usuarios"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#072741"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>


        <!-- FILA 1: FILTROS O RESUMEN -->
        <StackPanel Grid.Row="1" Margin="0,10,0,10">
            <!-- Aquí podrás agregar filtros, combos, datepickers, etc. -->
            <TextBlock Text="Filtros o resumen (opcional)" 
                    FontStyle="Italic"
                    Foreground="#94A3B8"/>
        </StackPanel>

        <!-- FILA 2: CONTENIDO PRINCIPAL -->
        <Border Grid.Row="2"
                 Background="White"
                 CornerRadius="10"
                 BorderBrush="#E5E7EB"
                 BorderThickness="1"
                 Padding="20"
                 Effect="{DynamicResource CardShadow}">
            <TextBlock Text="Aquí se mostrará el análisis de ventas, gráficos o reportes detallados."
                    Foreground="#64748B"
                    TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>
