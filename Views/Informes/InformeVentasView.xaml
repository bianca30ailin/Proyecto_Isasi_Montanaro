<UserControl x:Class="Proyecto_Isasi_Montanaro.Views.Informes.InformeVentasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views.Informes"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F3EDF7">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Encabezado -->
            <RowDefinition Height="Auto"/>
            <!-- Filtros -->
            <RowDefinition Height="Auto"/>
            <!-- Resumen -->
            <RowDefinition Height="Auto"/>
            <!-- Gráficos -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- FILA 0: ENCABEZADO -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Command="{Binding VolverCommand}"
                 Background="Transparent"
                 Foreground="#072741"
                 BorderThickness="0"
                 FontWeight="Bold"
                 FontSize="14"
                 Cursor="Hand"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 Padding="0"
                 Margin="0,0,15,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="ArrowLeft"
                                     Width="18" Height="18"
                                     VerticalAlignment="Center"
                                     Margin="0,0,5,0"/>
                </StackPanel>
            </Button>

            <StackPanel Grid.Column="1"
                         Orientation="Horizontal"
                         VerticalAlignment="Center"
                         Margin="0,0,0,0">
                <iconPacks:PackIconMaterial Kind="CartOutline"
                                 Width="20" Height="20"
                                 Foreground="#E35802"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                <TextBlock Text="Informe de Ventas"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#072741"
                            VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- FILA 1: FILTROS -->
        <Border Grid.Row="1" Style="{StaticResource FilterPanel}" Margin="0,0,0,15">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                          Style="{StaticResource FormCombo}"
                          Margin="0,0,10,0"
                          ItemsSource="{Binding CriteriosOrden}"
                          SelectedItem="{Binding CriterioOrdenSeleccionado, Mode=TwoWay}"
                          SelectedIndex="0"
                          ToolTip="Ordenar informe por..."/>

                <DatePicker Grid.Column="1"
                            Style="{StaticResource FormDate}"
                            Margin="0,0,10,0"
                            SelectedDate="{Binding FechaDesde, Mode=TwoWay}"
                            ToolTip="Desde esta fecha"/>

                <DatePicker Grid.Column="2"
                            Style="{StaticResource FormDate}"
                            Margin="0,0,16,0"
                            SelectedDate="{Binding FechaHasta, Mode=TwoWay}"
                            ToolTip="Hasta esta fecha"/>

                <Button Grid.Column="3"
                        Content="Generar"
                        Style="{StaticResource BtnPrimary}"
                        Margin="0,0,8,0"
                        MinWidth="60"
                        Command="{Binding GenerarReporteCommand}"/>

                <Button Grid.Column="4"
                        Content="Limpiar"
                        Style="{StaticResource BtnSecondary}"
                        MinWidth="60"
                        Margin="0,0,8,0"
                        Command="{Binding LimpiarFiltrosCommand}"/>

                <Button Grid.Column="5"
                        Style="{StaticResource BtnPrimary}"
                        MinWidth="110"
                        Command="{Binding ExportarPdfCommand}"
                        Background="#E35802"
                        ToolTip="Exportar informe a PDF">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="FilePdfBox" 
                                            Width="12" Height="12"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0"/>
                        <TextBlock Text="Exportar PDF" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- FILA 2: RESUMEN (Tarjetas) -->
        <UniformGrid Grid.Row="2" Columns="4" Margin="0,0,0,15">
            <!-- Total Vendido -->
            <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="0,0,5,0">
                <StackPanel HorizontalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="CurrencyUsd" 
                                                    Width="24" Height="24" 
                                                    Foreground="#E35802"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,8"/>
                    <TextBlock Text="Total Vendido"
                                   Foreground="#072741"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"
                                   FontSize="13"
                                   HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalPeriodo, StringFormat='${0:N2}'}"
                                   Foreground="#E35802"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Cantidad de Ventas -->
            <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="5,0">
                <StackPanel HorizontalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="ShoppingOutline" 
                                                    Width="24" Height="24" 
                                                    Foreground="#072741"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,8"/>
                    <TextBlock Text="Cantidad de Ventas"
                                   Foreground="#072741"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"
                                   FontSize="13"
                                   HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CantidadVentas}"
                                   Foreground="#072741"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Devoluciones -->
            <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="5,0">
                <StackPanel HorizontalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="KeyboardReturn" 
                                                    Width="24" Height="24" 
                                                    Foreground="#E35802"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,8"/>
                    <TextBlock Text="Devoluciones"
                                   Foreground="#072741"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"
                                   FontSize="13"
                                   HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CantidadDevoluciones}"
                                   Foreground="#E35802"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- % Devoluciones -->
            <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="5,0,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="Percent" 
                                                    Width="24" Height="24" 
                                                    Foreground="#072741"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,8"/>
                    <TextBlock Text="% Devoluciones"
                                   Foreground="#072741"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"
                                   FontSize="13"
                                   HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding PorcentajeDevoluciones, StringFormat='{}{0:F1}%'}"
                                   Foreground="#072741"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- FILA 3: GRÁFICOS PRIMERA LÍNEA -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- GRÁFICO 1: Ventas por Estado -->
            <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="10" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        Padding="15"
                        Margin="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="Ventas por Estado"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#072741"
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Center"/>

                    <ItemsControl ItemsSource="{Binding VentasPorEstado}" MaxHeight="220">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                                   Text="{Binding Estado}" 
                                                   FontSize="11"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>

                                    <Border Grid.Column="1" 
                                                Background="{Binding Color}" 
                                                Height="22"
                                                CornerRadius="4"
                                                Margin="5,0"
                                                HorizontalAlignment="Left"
                                                Width="{Binding AnchoCalculado}"/>

                                    <TextBlock Grid.Column="2" 
                                                   Text="{Binding Cantidad}" 
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="#072741"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- GRÁFICO 2: Top Vendedores -->
            <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="10" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        Padding="15"
                        Margin="5,0">
                <StackPanel>
                    <TextBlock Text="Top 5 Vendedores"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#072741"
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Center"/>

                    <ItemsControl ItemsSource="{Binding TopVendedores}" Height="220">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Barra -->
                                    <Border Grid.Row="0" 
                                                Background="#E35802"
                                                CornerRadius="4"
                                                VerticalAlignment="Bottom"
                                                Height="{Binding AlturaCalculada}"/>

                                    <!-- Cantidad -->
                                    <TextBlock Grid.Row="1" 
                                                   Text="{Binding CantidadVentas}" 
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="#072741"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,4,0,2"/>

                                    <!-- Total -->
                                    <TextBlock Grid.Row="2" 
                                                   Text="{Binding TotalVendido, StringFormat=${0:N0}}" 
                                                   FontSize="9"
                                                   Foreground="#666"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,4"/>

                                    <!-- Nombre -->
                                    <TextBlock Grid.Row="3" 
                                                   Text="{Binding Vendedor}" 
                                                   FontSize="9"
                                                   Foreground="#072741"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   MaxWidth="80"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- GRÁFICO 3: Comparativa Envíos -->
            <Border Grid.Column="2" 
                        Background="White" 
                        CornerRadius="10" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        Padding="15"
                        Margin="5,0,0,0">
                <StackPanel>
                    <TextBlock Text="Ventas Con/Sin Envío"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#072741"
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Center"/>

                    <ItemsControl ItemsSource="{Binding ComparativaEnvios}" Height="220">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="10,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Barra -->
                                    <Border Grid.Row="0" 
                                                Background="{Binding Color}"
                                                CornerRadius="4"
                                                VerticalAlignment="Bottom"
                                                Height="{Binding AlturaCalculada}"/>

                                    <!-- Cantidad -->
                                    <TextBlock Grid.Row="1" 
                                                   Text="{Binding Cantidad}" 
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="#072741"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,5,0,2"/>

                                    <!-- Porcentaje -->
                                    <TextBlock Grid.Row="2" 
                                                   Text="{Binding Porcentaje, StringFormat='{}{0:F1}%'}" 
                                                   FontSize="10"
                                                   Foreground="#666"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,4"/>

                                    <!-- Tipo -->
                                    <TextBlock Grid.Row="3" 
                                                   Text="{Binding Tipo}" 
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#072741"
                                                   HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>

        <!-- FILA 4: GRÁFICO DE DEVOLUCIONES (Torta simulada con círculos) -->
        <Border Grid.Row="4" 
                    Background="White" 
                    CornerRadius="10" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    Padding="15"
                    Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Análisis de Devoluciones"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#072741"
                               Margin="0,0,0,15"
                               HorizontalAlignment="Center"/>

                <ItemsControl ItemsSource="{Binding Devoluciones}" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="20,0" Padding="15" 
                                        Background="#F9FAFB" 
                                        CornerRadius="8">
                                <StackPanel HorizontalAlignment="Center">
                                    <!-- Círculo decorativo -->
                                    <Ellipse Width="80" Height="80" 
                                                 Fill="{Binding Color}"
                                                 Margin="0,0,0,10"/>

                                    <TextBlock Text="{Binding Tipo}" 
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Foreground="#072741"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,5"/>

                                    <TextBlock Text="{Binding Cantidad}" 
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="{Binding Color}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,3"/>

                                    <TextBlock Text="{Binding Porcentaje, StringFormat='{}{0:F1}%'}" 
                                                   FontSize="16"
                                                   Foreground="#666"
                                                   HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- FILA 4: DATAGRID -->
        <Border Grid.Row="4"
                Background="White"
                CornerRadius="10"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Padding="10">
            <DataGrid ItemsSource="{Binding Ventas}"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      AlternatingRowBackground="#F9FAFB"
                      GridLinesVisibility="None"
                      FontSize="13"
                      BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat={}{0:dd/MM/yyyy}}" Width="*" />
                    <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*" />
                    <DataGridTextColumn Header="Vendedor" Binding="{Binding Vendedor}" Width="*" />
                    <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=${0:N2}}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
    </ScrollViewer>
</UserControl>
