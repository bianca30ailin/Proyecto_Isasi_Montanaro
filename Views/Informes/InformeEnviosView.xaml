<UserControl x:Class="Proyecto_Isasi_Montanaro.Views.Informes.InformeEnviosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views.Informes"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F3EDF7">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Encabezado -->
                <RowDefinition Height="Auto"/>
                <!-- Filtros -->
                <RowDefinition Height="Auto"/>
                <!-- Resumen -->
                <RowDefinition Height="Auto"/>
                <!-- Gráficos 1 -->
                <RowDefinition Height="Auto"/>
                <!-- Gráficos 2 -->
                <RowDefinition Height="Auto"/>
                <!-- Tabla -->
            </Grid.RowDefinitions>

            <!-- === ENCABEZADO === -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Command="{Binding VolverCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#072741"
                        Cursor="Hand"
                        Margin="0,0,15,0">
                    <iconPacks:PackIconMaterial Kind="ArrowLeft"
                                                Width="20" Height="20"/>
                </Button>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="TruckDelivery"
                                                Width="22" Height="22"
                                                Foreground="#F5A623"
                                                Margin="0,0,10,0"/>
                    <TextBlock Text="Informe de Envíos"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#072741"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- === FILTROS === -->
            <Border Grid.Row="1" Style="{StaticResource FilterPanel}" Margin="0,0,0,15">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                              Style="{StaticResource FormCombo}"
                              Margin="0,0,10,0"
                              ItemsSource="{Binding CriteriosOrden}"
                              SelectedItem="{Binding CriterioOrdenSeleccionado, Mode=TwoWay}"
                              ToolTip="Ordenar informe por..."/>

                    <DatePicker Grid.Column="1"
                                Style="{StaticResource FormDate}"
                                Margin="0,0,10,0"
                                SelectedDate="{Binding FechaDesde, Mode=TwoWay}"
                                ToolTip="Desde esta fecha"/>

                    <DatePicker Grid.Column="2"
                                Style="{StaticResource FormDate}"
                                Margin="0,0,16,0"
                                SelectedDate="{Binding FechaHasta, Mode=TwoWay}"
                                ToolTip="Hasta esta fecha"/>

                    <Button Grid.Column="3"
                            Content="Generar"
                            Style="{StaticResource BtnPrimary}"
                            Margin="0,0,8,0"
                            MinWidth="80"
                            Command="{Binding GenerarReporteCommand}"/>

                    <Button Grid.Column="4"
                            Content="Limpiar"
                            Style="{StaticResource BtnSecondary}"
                            Margin="0,0,8,0"
                            MinWidth="80"
                            Command="{Binding LimpiarFiltrosCommand}"/>

                    <Button Grid.Column="5"
                            Style="{StaticResource BtnPrimary}"
                            Background="#F5A623"
                            Foreground="White"
                            MinWidth="110"
                            Command="{Binding ExportarPdfCommand}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="FilePdfBox"
                                                        Width="12" Height="12"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                            <TextBlock Text="Exportar PDF" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- === TARJETAS RESUMEN === -->
            <UniformGrid Grid.Row="2" Columns="3" Margin="0,0,0,15">
                <!-- TOTAL -->
                <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="15">
                    <StackPanel HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="TruckFast"
                                                    Width="24" Height="24"
                                                    Foreground="#F5A623"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,8"/>
                        <TextBlock Text="Total de Envíos"
                                   Foreground="#072741"
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalEnvios}"
                                   Foreground="#F5A623"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- PROMEDIO ENTREGA -->
                <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="15">
                    <StackPanel HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="ClockTimeEightOutline"
                                                    Width="24" Height="24"
                                                    Foreground="#072741"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,8"/>
                        <TextBlock Text="Promedio Entrega&#x0a;(días)"
                                   Foreground="#072741"
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding PromedioEntregaDias, StringFormat={}{0:F1}}"
                                   Foreground="#072741"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- SIN DESPACHO -->
                <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="15">
                    <StackPanel HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="AlertOutline"
                                                    Width="24" Height="24"
                                                    Foreground="#F5A623"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,8"/>
                        <TextBlock Text="Envíos sin&#x0a;despacho"
                                   Foreground="#072741"
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding SinDespacho}"
                                   Foreground="#F5A623"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- === GRÁFICOS 1: ESTADO / TRANSPORTE === -->
            <Grid Grid.Row="3" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- POR ESTADO -->
                <Border Grid.Column="0" Background="White" CornerRadius="10"
                        BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="0,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Envíos por Estado"
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="#072741"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <ItemsControl ItemsSource="{Binding EnviosPorEstado}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Estado}"
                                                   FontSize="11" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" Background="{Binding Color}"
                                                Height="20" CornerRadius="4"
                                                Width="{Binding AnchoCalculado}"
                                                Margin="5,0"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Cantidad}"
                                                   FontSize="12" FontWeight="Bold"
                                                   Foreground="#072741"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- POR TRANSPORTE -->
                <Border Grid.Column="1" Background="White" CornerRadius="10"
                        BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="5,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Envíos por Transporte"
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="#072741"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>
                        <ItemsControl ItemsSource="{Binding EnviosPorTransporte}" Height="220">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="10,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0"
                                                Background="#F5A623"
                                                CornerRadius="3"
                                                Height="{Binding AlturaCalculada}"
                                                VerticalAlignment="Bottom"/>
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Cantidad}"
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="#072741"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,4,0,2"/>
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding Transporte}"
                                                   FontSize="10"
                                                   Foreground="#072741"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   MaxWidth="80"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- === GRÁFICOS 2: CIUDADES Y COSTOS === -->
            <Grid Grid.Row="4" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- ENVÍOS POR CIUDAD -->
                <Border Grid.Column="0" Background="White" CornerRadius="10"
                        BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="0,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Cantidad de Envíos por Ciudad"
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="#072741"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>
                        <ItemsControl ItemsSource="{Binding EnviosPorCiudad}" Height="220">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="10,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0"
                                                Background="#072741"
                                                CornerRadius="3"
                                                Height="{Binding AlturaCalculada}"
                                                VerticalAlignment="Bottom"/>
                                        <TextBlock Grid.Row="1" Text="{Binding Cantidad}"
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="#072741"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,4,0,2"/>
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding Ciudad}"
                                                   FontSize="10"
                                                   Foreground="#072741"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="80"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- PROMEDIO DE COSTOS -->
                <Border Grid.Column="1" Background="White" CornerRadius="10"
                        BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="5,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Promedio de Costo por Ciudad"
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="#072741"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>
                        <ItemsControl ItemsSource="{Binding PromedioCostoPorCiudad}" Height="220">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="10,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0"
                                                Background="#F5A623"
                                                CornerRadius="3"
                                                Height="{Binding AlturaCalculada}"
                                                VerticalAlignment="Bottom"/>
                                        <TextBlock Grid.Row="1" Text="{Binding Promedio, StringFormat=${0:N2}}"
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="#072741"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,4,0,2"/>
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding Ciudad}"
                                                   FontSize="10"
                                                   Foreground="#072741"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="80"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- === TABLA DETALLE === -->
            <Border Grid.Row="5"
                    Background="White"
                    CornerRadius="10"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    Padding="10">
                <StackPanel>
                    <TextBlock Text="Detalle de Envíos"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#072741"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <DataGrid ItemsSource="{Binding EnviosDetalle}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              AlternatingRowBackground="#F9FAFB"
                              GridLinesVisibility="None"
                              FontSize="13"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdEnvio}" Width="60" />
                            <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="*" />
                            <DataGridTextColumn Header="Transporte" Binding="{Binding Transporte}" Width="*" />
                            <DataGridTextColumn Header="Ciudad" Binding="{Binding Ciudad}" Width="*" />
                            <DataGridTextColumn Header="Despacho" Binding="{Binding FechaDespacho}" Width="*" />
                            <DataGridTextColumn Header="Entrega" Binding="{Binding FechaEntrega}" Width="*" />
                            <DataGridTextColumn Header="Costo" Binding="{Binding Costo, StringFormat=${0:N2}}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
