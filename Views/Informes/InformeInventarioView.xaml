<UserControl x:Class="Proyecto_Isasi_Montanaro.Views.Informes.InformeInventarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views.Informes"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F3EDF7">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Encabezado -->
                <RowDefinition Height="Auto"/>
                <!-- Filtros -->
                <RowDefinition Height="Auto"/>
                <!-- Resumen -->
                <RowDefinition Height="Auto"/>
                <!-- Gráficos -->
                <RowDefinition Height="Auto"/>
                <!-- Sin Stock / Stock Mínimo -->
                <RowDefinition Height="Auto"/>
                <!-- DataGrid -->
            </Grid.RowDefinitions>

            <!-- FILA 0: ENCABEZADO -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Command="{Binding VolverCommand}"
                    Background="Transparent"
                    Foreground="#A67C52"
                    BorderThickness="0"
                    FontWeight="Bold"
                    FontSize="14"
                    Cursor="Hand"
                    Padding="0"
                    Margin="0,0,15,0">
                    <iconPacks:PackIconMaterial Kind="ArrowLeft" Width="18" Height="18"/>
                </Button>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="Warehouse" Width="22" Height="22"
                                            Foreground="#A67C52" Margin="0,0,10,0"/>
                    <TextBlock Text="Informe de Inventario"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#072741"
                           VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- FILA 1: FILTROS -->
            <Border Grid.Row="1" Style="{StaticResource FilterPanel}" Margin="0,0,0,15">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                          Style="{StaticResource FormCombo}"
                          Margin="0,0,10,0"
                          ItemsSource="{Binding CriteriosOrden}"
                          SelectedItem="{Binding CriterioOrdenSeleccionado, Mode=TwoWay}"
                          ToolTip="Ordenar por..."/>

                    <DatePicker Grid.Column="1"
                            Style="{StaticResource FormDate}"
                            Margin="0,0,10,0"
                            SelectedDate="{Binding FechaDesde, Mode=TwoWay}"
                            ToolTip="Desde esta fecha"/>

                    <DatePicker Grid.Column="2"
                            Style="{StaticResource FormDate}"
                            Margin="0,0,16,0"
                            SelectedDate="{Binding FechaHasta, Mode=TwoWay}"
                            ToolTip="Hasta esta fecha"/>

                    <Button Grid.Column="3"
                        Content="Generar"
                        Style="{StaticResource BtnPrimary}"
                        Margin="0,0,8,0"
                        Command="{Binding GenerarReporteCommand}"/>

                    <Button Grid.Column="4"
                        Content="Limpiar"
                        Style="{StaticResource BtnSecondary}"
                        Margin="0,0,8,0"
                        MinWidth="80"
                        Command="{Binding LimpiarFiltrosCommand}"/>

                    <Button Grid.Column="5"
                        Style="{StaticResource BtnPrimary}"
                        Background="#A67C52"
                        MinWidth="110"
                        Command="{Binding ExportarPdfCommand}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="FilePdfBox"
                                                    Width="12" Height="12"
                                                    Margin="0,0,8,0"/>
                            <TextBlock Text="Exportar PDF"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- FILA 2: RESUMEN -->
            <UniformGrid Grid.Row="2" Columns="5" Margin="0,0,0,15">
                <!-- Total Productos -->
                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="PackageVariantClosed"
                                                Width="24" Height="24"
                                                Foreground="#A67C52"
                                                  HorizontalAlignment="Center"
                                                Margin="0,0,0,8"/>
                        <TextBlock Text="Total Productos"
                               Foreground="#072741"
                               FontWeight="SemiBold"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TotalProductos}"
                               Foreground="#A67C52"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Activos -->
                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="CheckBold"
                                                Width="24" Height="24"
                                                Foreground="#2ECC71"
                                                  HorizontalAlignment="Center"
                                                Margin="0,0,0,8"/>
                        <TextBlock Text="Activos"
                               Foreground="#072741"
                               FontWeight="SemiBold"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Activos}"
                               Foreground="#2ECC71"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Dado de Baja -->
                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="CloseThick"
                                                Width="24" Height="24"
                                                Foreground="#E74C3C"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,8"/>
                        <TextBlock Text="Dado de Baja"
                               Foreground="#072741"
                               FontWeight="SemiBold"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding DadosDeBaja}"
                               Foreground="#E74C3C"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Sin Stock -->
                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="PackageDown"
                                                Width="24" Height="24"
                                                Foreground="#9CA3AF"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,8"/>
                        <TextBlock Text="Sin Stock"
                               Foreground="#072741"
                               FontWeight="SemiBold"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SinStock}"
                               Foreground="#9CA3AF"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Stock Mínimo -->
                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="AlertOutline"
                                                Width="24" Height="24"
                                                Foreground="#F1C40F"
                                                  HorizontalAlignment="Center"
                                                Margin="0,0,0,8"/>
                        <TextBlock Text="Stock Mínimo"
                               Foreground="#072741"
                               FontWeight="SemiBold"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding StockMinimo}"
                               Foreground="#F1C40F"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- FILA 3: GRÁFICOS -->
            <Grid Grid.Row="3" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Productos por Categoría -->
                <Border Grid.Column="0" Background="White" CornerRadius="10"
                    BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="0,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Productos por Categoría"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#A67C52"
                               Margin="0,0,0,15" HorizontalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding ProductosPorCategoria}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Categoria}" FontSize="11"/>
                                        <Border Grid.Column="1" Background="{Binding Color}" Height="18" CornerRadius="3"
                                            Width="{Binding AlturaCalculada}" Margin="5,0"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Cantidad}" FontSize="11"
                                               FontWeight="Bold" Foreground="#A67C52" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Top Productos Más Vendidos -->
                <Border Grid.Column="1" Background="White" CornerRadius="10"
                    BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="5,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Top 5 Productos Más Vendidos"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#A67C52"
                               Margin="0,0,0,15" HorizontalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding MasVendidos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Producto}" FontSize="12"/>
                                        <TextBlock Text="{Binding Cantidad}" FontSize="12" FontWeight="Bold"
                                               Foreground="#A67C52" Grid.Column="1"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- FILA 4: SIN STOCK Y STOCK MÍNIMO -->
            <Grid Grid.Row="4" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Productos Sin Stock -->
                <Border Grid.Column="0" Background="White" CornerRadius="10"
                    BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="0,0,5,0">
                    <StackPanel>
                        <TextBlock Text="{Binding CantidadSinStock, StringFormat=Productos Sin Stock ({0})}"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#A67C52"
                               Margin="0,0,0,15" HorizontalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding ProductosSinStock}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Nombre}" FontSize="12"/>
                                        <TextBlock Text="{Binding Categoria}" Grid.Column="1" FontSize="12"
                                               Foreground="#9CA3AF" FontStyle="Italic"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Productos con Stock Mínimo -->
                <Border Grid.Column="1" Background="White" CornerRadius="10"
                    BorderBrush="#E5E7EB" BorderThickness="1" Padding="15" Margin="5,0,0,0">
                    <StackPanel>
                        <TextBlock Text="{Binding CantidadStockMinimo, StringFormat=Productos con Stock Mínimo ({0})}"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#A67C52"
                               Margin="0,0,0,15" HorizontalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding ProductosStockMinimo}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Nombre}" FontSize="12"/>
                                        <TextBlock Text="{Binding Cantidad}" Grid.Column="1" FontSize="12"
                                               FontWeight="Bold" Foreground="#F1C40F"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- FILA 5: DETALLE -->
            <Border Grid.Row="5" Background="White" CornerRadius="10"
                BorderBrush="#E5E7EB" BorderThickness="1" Padding="10">
                <DataGrid ItemsSource="{Binding ProductosDetalle}"
                      AutoGenerateColumns="False"
                      AlternatingRowBackground="#F9FAFB"
                      GridLinesVisibility="None"
                      FontSize="13">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" />
                        <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" Width="*" />
                        <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat=${0:N2}}" Width="*" />
                        <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="*" />
                        <DataGridTextColumn Header="Stock Mínimo" Binding="{Binding StockMinimo}" Width="*" />
                        <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
