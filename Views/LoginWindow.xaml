<Window x:Class="Proyecto_Isasi_Montanaro.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views"
        mc:Ignorable="d"
        Title="SISIE-Iniciar Sesión" Height="600" Width="450"
        Icon="/Assets/iconos/fluent--box-16-regular.ico"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFFFFF">
        <Window.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/Styles/Forms.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Window.Resources>

    <Grid x:Name="Login">
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <!-- Encabezado -->
            <RowDefinition/>
            <!-- Formulario -->
            <RowDefinition Height="60"/>
            <!-- Pie -->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#072741" CornerRadius="0,0,0,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="153">
                <Image Source="/Assets/box/logo.png" Width="60" Height="60" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="SISIE" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Sistema de Inventario y Gestión de envíos"
                           FontSize="16" Foreground="White"
                           TextAlignment="Center" Margin="10,10,10,0"/>
            </StackPanel>
        </Border>
        
        <StackPanel Grid.Row="1" Background="White" Margin="20,20,20,0">
            <!-- Usuario -->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,2">
                <Image Source="/Assets/form/userlogin.png"
               Width="14" Height="14"
               Margin="8,0,5,0"/>
                <TextBlock Text="Usuario" Style="{StaticResource FormLabel}"/>
            </StackPanel>
            <TextBox Name="txtUsuario"
                 Style="{StaticResource FormTextBox}"
                 MaxLength="8"
                 PreviewTextInput="TxtUsuario_PreviewTextInput"
                 PreviewKeyDown="TxtUsuario_PreviewKeyDown"/>

            <!-- Contraseña -->
            <StackPanel Orientation="Horizontal" Margin="0,15,0,2">
                <Image Source="/Assets/form/solar--lock-outline.png"
               Width="14" Height="14"
               Margin="8,0,5,0"/>
                <TextBlock Text="Contraseña" Style="{StaticResource FormLabel}"/>
            </StackPanel>
            <PasswordBox Name="txtPassword" 
                         Style="{StaticResource FormPasswordBox}" 
                         PreviewKeyDown="TxtPassword_PreviewKeyDown"/>

            <CheckBox Content="Recordar usuario" 
                      Style="{StaticResource CustomCheckBox}"/>

            <Button Name="btnLogin" 
                    Content="Iniciar Sesión" 
                    Style="{StaticResource PrimaryButton}" Click="btnLogin_Click"
                    />
        </StackPanel>

        <TextBlock Grid.Row="3" 
           Text="©2025 SISIE. Todos los derechos reservados" 
           Style="{StaticResource FormFooter}"/>
    </Grid>
</Window>
