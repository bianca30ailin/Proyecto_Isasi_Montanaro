<UserControl x:Class="Proyecto_Isasi_Montanaro.Views.BackUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views"
             xmlns:vm="clr-namespace:Proyecto_Isasi_Montanaro.ViewModels"
             mc:Ignorable="d" 
             Background="#F3EDF7"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:BackUpViewModel/>
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- Encabezado -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
            <RowDefinition  Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- FILA 0: TÍTULO -->
        <StackPanel Grid.Row="0" Style="{StaticResource HeaderWithIcon}">
            <Image Source="/Assets/data/iconoir--database-backup.png" Style="{StaticResource HeaderIcon}"/>
            <TextBlock Text="Back Up" Style="{StaticResource HeaderTitle}"/>
        </StackPanel>

        <!-- FILA 1: CONTENIDO -->
        <Border Grid.Row="1" Style="{StaticResource FilterPanel}" Margin="0,10,0,0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,10">

                <!-- Campo Base de datos -->
                <TextBlock Text="Base de datos" Margin="0,0,0,4"
                       Style="{StaticResource TableHeaderTitle}"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBox Width="300"
                         Style="{StaticResource FormTextBox}"
                         Text="{Binding NombreBaseDatos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="True"/>
                    <Button Content="Conectar"
                        Margin="10,0,0,0"
                        Style="{StaticResource BtnSecondary}"
                        Background="#757575"
                        Foreground="White"
                        Command="{Binding ConectarCommand}"/>
                </StackPanel>

                <!-- Campo Ruta -->
                <TextBlock Text="Ruta guardar" Margin="0,0,0,4"
                       Style="{StaticResource TableHeaderTitle}"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBox Width="300"
                         Style="{StaticResource FormTextBox}"
                         Text="{Binding RutaArchivoBackup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="True"/>
                    <Button Content="Ruta"
                        Margin="10,0,0,0"
                        Style="{StaticResource BtnSecondary}"
                        Background="#757575"
                        Foreground="White"
                        Command="{Binding SeleccionarRutaCommand}"/>
                </StackPanel>

                <!-- Botón principal -->
                <Button Content="Back Up"
                    Width="120"
                    HorizontalAlignment="Center"
                    Style="{StaticResource BtnPrimary}"
                    Command="{Binding RealizarBackupCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
