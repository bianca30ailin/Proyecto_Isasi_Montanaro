<UserControl x:Class="Proyecto_Isasi_Montanaro.Views.InventarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:vm="clr-namespace:Proyecto_Isasi_Montanaro.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F3EDF7">

    <UserControl.DataContext>
        <vm:InventarioViewModel/>
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- Encabezado -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
            <RowDefinition  Height="Auto"/>
            <!-- Filtrado -->
            <RowDefinition Height="Auto"/>
            <!-- Titulo tabla-->
            <RowDefinition Height="Auto"/>
            <!-- Tabla -->
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- FILA 0: TÍTULO -->
        <StackPanel Grid.Row="0" Style="{StaticResource HeaderWithIcon}">
            <Image Source="/Assets/box/bi--box.png" Style="{StaticResource HeaderIcon}"/>
            <TextBlock Text="Gestión de Inventario" Style="{StaticResource HeaderTitle}"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Chips a la izquierda -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Activos" Style="{StaticResource ChipActivos}" 
                        Command="{Binding FiltrarActivosCommand}" Margin="0,0,10,0"/>
                <Button Content="Inactivos" Style="{StaticResource ChipInactivos}" 
                        Command="{Binding FiltrarInactivosCommand}"/>
            </StackPanel>

            <!-- Botón Nuevo Producto - SOLO VISIBLE CON PERMISOS -->
            <Button x:Name="NuevoProducto" Content="Nuevo Producto"
                Style="{StaticResource BtnPrimary}"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Command="{Binding AbrirFormularioProductoCommand}"
                Visibility="{Binding PuedeCrearProducto, Converter={StaticResource BoolToVis}}"/>
        </Grid>


        <!-- FILA 2: FILTROS -->
        <Border Grid.Row="2" Style="{StaticResource FilterPanel}">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Categoría más ancha -->
                    <ColumnDefinition Width="*"/>
                    <!-- Fecha 1 -->
                    <ColumnDefinition Width="*"/>
                    <!-- Fecha 2 -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Botón Filtrar -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Botón Limpiar -->
                </Grid.ColumnDefinitions>

                <!-- ComboBox Categorías -->
                <ComboBox Grid.Column="0"
                          Style="{StaticResource FormCombo}"
                          ItemsSource="{Binding Categorias}"
                          SelectedItem="{Binding CategoriaSeleccionada, Mode=TwoWay}"
                          DisplayMemberPath="Nombre"
                          SelectedIndex="0"
                          Margin="0,0,10,0"/>

                <!-- DatePickers -->
                <DatePicker Grid.Column="1" 
                    Style="{StaticResource FormDate}" 
                    Margin="0,0,10,0"/>
                <DatePicker Grid.Column="2" 
                    Style="{StaticResource FormDate}" 
                    Margin="0,0,16,0"/>

                <!-- Botones -->
                <Button Grid.Column="3" 
                Content="Filtrar" 
                Style="{StaticResource BtnPrimary}" 
                Margin="0,0,8,0"
                MinWidth="100"/>

                <Button Grid.Column="4" 
                Content="Limpiar"
                Style="{StaticResource BtnSecondary}" 
                Command="{Binding LimpiarFiltroCommand}"
                Margin="0,0,0,0"
                MinWidth="100"/>
            </Grid>
        </Border>

        <!-- FILA 3: Encabezado de tabla -->
        <Border Grid.Row="3"
            Background="White"
            Margin="0,10,0,4" 
            BorderBrush="#E5E7EB"
            BorderThickness="0,0,0,1">
            <!-- línea sutil abajo -->
            <Grid Style="{StaticResource TableHeaderBar}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Título -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                    <Image Source="/Assets/otros/material-symbols--list-rounded.png" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Listado de Productos" Style="{StaticResource TableHeaderTitle}"/>
                </StackPanel>

                <!-- Cuadro de búsqueda -->
                <TextBox
                         Text="{Binding TextoBusqueda, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="540,0,0,0" Cursor="" Grid.ColumnSpan="2"
                         />
            </Grid>
        </Border>

        <!-- FILA 4: TABLA -->
        <DataGrid Grid.Row="4" Style="{StaticResource AppDataGrid}" Margin="0,2,0,0"
              ItemsSource="{Binding Productos}" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código"    Binding="{Binding IdProducto}" Width="Auto"/>
                <DataGridTextColumn Header="Producto"  Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding IdCategoriaNavigation.Nombre}" Width="*"/>
                <DataGridTextColumn Header="Stock"     Binding="{Binding Cantidad}" Width="Auto"/>
                <DataGridTextColumn Header="Precio"    Binding="{Binding Precio, StringFormat=C}" Width="Auto"/>
                <DataGridTextColumn Header="Estado"    Binding="{Binding Baja}" Width="*"/>
                <DataGridTextColumn Header="Creado por" 
                    Width="Auto">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} {1}">
                            <Binding Path="UsuarioCreacion.Nombre"/>
                            <Binding Path="UsuarioCreacion.Apellido"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Fecha Creación" 
                        Binding="{Binding FechaCreacion, StringFormat='{}{0:dd/MM/yyyy}'}" 
                        Width="Auto"/>
                <DataGridTemplateColumn Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
                                <!-- Botón Editar - SOLO VISIBLE CON PERMISOS -->
                                <Button Style="{StaticResource BtnSecondary}" 
                                        Height="15" MinWidth="15" Margin="2,2,4,2"
                                        Command="{Binding DataContext.EditarProductoCommand,
                                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding DataContext.PuedeEditarProducto,
                                                     RelativeSource={RelativeSource AncestorType=DataGrid},
                                                     Converter={StaticResource BoolToVis}}">
                                    <iconPacks:PackIconMaterial Kind="Eye" Width="16" Height="16" Foreground="#F5A623"/>
                                </Button>

                                <!-- Botón Eliminar - SOLO VISIBLE CON PERMISOS -->
                                <Button Style="{StaticResource BtnSecondary}" 
                                        Height="15" MinWidth="15" Margin="4,2,2,2"
                                        Command="{Binding DataContext.EliminarProductoCommand,
                                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding DataContext.PuedeEliminarProducto,
                                                     RelativeSource={RelativeSource AncestorType=DataGrid},
                                                     Converter={StaticResource BoolToVis}}">
                                    <iconPacks:PackIconMaterial Kind="DeleteEmpty" Width="16" Height="16" Foreground="#D64545"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
