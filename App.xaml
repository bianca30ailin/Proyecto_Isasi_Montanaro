<Application x:Class="Proyecto_Isasi_Montanaro.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helper="clr-namespace:Proyecto_Isasi_Montanaro.Helpers"
             xmlns:local="clr-namespace:Proyecto_Isasi_Montanaro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             StartupUri="Views/LoginWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Gestiones.xaml"/>
                <ResourceDictionary Source="Styles/Forms.xaml"/>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
           
            <helper:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <helper:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <helper:ToLowerConverter x:Key="ToLowerConverter"/>
            <helper:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <helper:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>

</Application>
